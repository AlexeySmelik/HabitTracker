<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:id="@+id/habit">
    <View
            android:layout_width="382dp"
            android:layout_height="100dp"
            android:background="@drawable/frame_for_list_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view"
            app:layout_constraintHorizontal_bias="0.454"/>
    <TextView
            android:id="@+id/title"
            android:layout_width="188dp"
            android:layout_height="0dp"
            android:text="Title"
            app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:id="@+id/description"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="Description" app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view" app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.049" app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.863"/>
    <TextView
            android:text="Priority"
            android:id="@+id/priority"
            android:layout_width="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="23dp"
            app:layout_constraintHorizontal_bias="0.187"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.196"
            app:layout_constraintStart_toEndOf="@+id/title"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/description"/>
    <TextView
            android:text="Type"
            android:id="@+id/type"
            android:layout_width="55dp"
            android:layout_height="46dp"
            app:layout_constraintTop_toBottomOf="@+id/priority"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/description"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="Frequency"
            android:id="@+id/frequency"
            android:layout_width="205dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toBottomOf="@+id/type" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="156dp" android:layout_marginRight="156dp"
            app:layout_constraintBottom_toBottomOf="@+id/view" app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>